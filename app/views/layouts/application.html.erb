<!DOCTYPE html>
<html>
<head>
  <title>CE2Rails</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	
<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<% if current_user %>
  <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
<% else %>
  <%= link_to "Sign in", user_session_path %>
<% end %>

<%= yield %>

</body>
</html>
